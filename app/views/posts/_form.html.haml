= simple_form_for post do |f|
  = render 'shared/form_errors', form: f

  .mb-3
    = f.input :twitter_account_id, as: :select, collection: Current.user.twitter_accounts, label_method: :username, input_html: { class: 'form-control' }, include_blank: false
  .mb-3
    = f.input :body, as: :text, input_html: { class: 'form-control' }
  .mb-3
    = f.label :publish_at
    .form-control
      = f.datetime_field :publish_at, value: post.publish_at.strftime('%Y-%m-%dT%H:%M')
  = f.submit 'Schedule', class: 'btn btn-primary'
